<%= render 'posts/modal' %>

<div class="container">
  <div class="row">
    <div id="side-menu"  class="col-sm-3">
    </div><!-- side-menu -->

    <div id="main-content" class="col-sm-9">
      <% @posts.each do |post| %>
        <%= render partial: 'post', locals: {post: post} %>
      <% end %>
    </div><!-- main-content -->

  </div><!-- row -->
</div><!-- container -->